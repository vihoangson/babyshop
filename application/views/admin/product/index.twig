{% extends 'admincp.twig' %}

{% block title_page %}
	Chào mừng bạn tới shop
{% endblock %}


{% block content_page %}
		<div class="row wrapper border-bottom white-bg page-heading">
			<div class="col-lg-10">
				<h2>E-commerce product list</h2>
				<ol class="breadcrumb">
					<li>
						<a href="index.html">Home</a>
					</li>
					<li>
						<a>E-commerce</a>
					</li>
					<li class="active">
						<strong>Product list</strong>
					</li>
				</ol>
			</div>
			<div class="col-lg-2">

			</div>
		</div>
		<div class="wrapper wrapper-content animated fadeInRight ecommerce">
			<div class="ibox-content m-b-sm border-bottom">
				<div class="row">
					<div class="col-sm-4">
						<div class="form-group">
							<label class="control-label" for="product_name">Product Name</label>
							<input type="text" id="product_name" name="product_name" value="" placeholder="Product Name" class="form-control">
						</div>
					</div>
					<div class="col-sm-2">
						<div class="form-group">
							<label class="control-label" for="price">Price</label>
							<input type="text" id="price" name="price" value="" placeholder="Price" class="form-control">
						</div>
					</div>
					<div class="col-sm-2">
						<div class="form-group">
							<label class="control-label" for="quantity">Quantity</label>
							<input type="text" id="quantity" name="quantity" value="" placeholder="Quantity" class="form-control">
						</div>
					</div>
					<div class="col-sm-4">
						<div class="form-group">
							<label class="control-label" for="status">Status</label>
							<select name="status" id="status" class="form-control">
								<option value="1" selected>Enabled</option>
								<option value="0">Disabled</option>
							</select>
						</div>
					</div>
				</div>

			</div>

			<div class="row">
				<div class="col-lg-12">
					<a href="/admin/product/input" class="btn btn-primary"><i class="fa fa-plus"></i> Add product</a>
					<div class="ibox">
						<div class="ibox-content">
							<table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
								<thead>
								<tr>

									<th data-toggle="true">Product Name</th>
									<th data-hide="phone">Model</th>
									<th data-hide="all">Description</th>
									<th data-hide="phone">Price</th>
									<th data-hide="phone,tablet" >Quantity</th>
									<th data-hide="phone">Status</th>
									<th class="text-right" data-sort-ignore="true">Action</th>

								</tr>
								</thead>
								<tbody>
									{% for item in rs %}
										<tr>
											<td>
											   {{item.name}}
											</td>
											<td>
												<img src="{{item.image}}" style="height:50px;">
											</td>
											<td>
												{{item.description|e}}
											</td>
											<td>
												{{item.price}}
											</td>
											<td>
												{{item.views}}
											</td>
											<td>
												<span class="label label-primary">Enable</span>
											</td>
											<td class="text-right">
												<div class="btn-group">
													<a href="/admin/product/input/{{item.id}}" class="btn-white btn btn-xs">Edit</a>
													<a href="/admin/product/delete/{{item.id}}" class="btn-white btn btn-xs">Delete</a>
												</div>
											</td>
										</tr>
									{% endfor %}
								</tbody>
								<tfoot>
								<tr>
									<td colspan="6">
										<ul class="pagination pull-right"></ul>
									</td>
								</tr>
								</tfoot>
							</table>

						</div>
					</div>
				</div>
			</div>


		</div>


<!-- ============ ============ ============  ============  ============  ============  -->

{% endblock %}
{% block custom_css %}
<link rel="stylesheet" href="/assets/bower_components/summernote/dist/summernote.css">
{% endblock %}

{% block custom_js %}
<script src="/assets/bower_components/summernote/dist/summernote.js"></script>
<script>
	$("#summernote").summernote();
	$("form").submit(function(event) {
		$("[name='description']").html($("#summernote").summernote("code"));
	});
</script>
{% endblock %}
