													<th>
														Image url
													</th>
													<th>
														Sort order
													</th>
													<th>
														Actions
													</th>
												</tr>
												</thead>
												<tbody>
													{% if rs.product_images %}
														{% for key,item in rs.product_images %}
															<tr>
																<td>
																	<img src="{{item.path_img}}">
																</td>
																<td>
																	<input type="text" class="form-control" disabled value="{{item.path_img}}">
																</td>
																<td>
																	<input type="text" class="form-control" value="{{key}}">
																</td>
																<td>
																	<button class="btn btn-white"><i class="fa fa-trash"></i> </button>
																</td>
															</tr>
														{% endfor %}
													{% endif %}
												</tbody>
											</table>
										</div>
										<form action="" method="POST" role="form" enctype="multipart/form-data" class="form_img">
											<input name="image[]" type="file" class="form-control" id="product_imgs" placeholder="Input field" multiple>
										</form>
									</div>
								</div>
							</div>
					</div>
				</div>
			</div>

		</div>

	

{% endblock %}

{% block custom_css %}
<link rel="stylesheet" href="/assets/bower_components/summernote/dist/summernote.css">
<link href="{{url_template_admin}}css/plugins/datapicker/datepicker3.css" rel="stylesheet">
{% endblock %}

{% block custom_js %}

<script src="/assets/bower_components/summernote/dist/summernote.js"></script>
<script src="{{url_template_admin}}js/plugins/datapicker/bootstrap-datepicker.js"></script>
<script>
	$("#product_imgs").change(function(event) {
		$(this).parents("form").submit();
	});
	$("#summernote").summernote();	
	$("form").submit(function(event) {
		$("[name='description']").html($("#summernote").summernote("code"));
	});
	$('.input-group.date').datepicker({
		todayBtn: "linked",
		keyboardNavigation: false,
		forceParse: false,
		calendarWeeks: true,
		autoclose: true
	});
</script>
{% endblock %}


